@model Covid.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href="~/Content/css/footer.css" rel="stylesheet" />

<body style="background-color:#f3f1f1">
    <div class="col-10" style="background-color:#f3f1f1; margin-right:10%;margin-left:10%">
        <div class="well">
            <table class="table table-bordered">
                <thead>
                    <tr class="success">
                        <th colspan="2">
                            Exsting User login
                            <a class="btn btn-success pull-right" href="~/Account/Register">Register</a>
                        </th>
                    </tr>
                </thead>
                <tbody>

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <tr>
                            <td>@Html.LabelFor(m => m.UserName, new { @class = "col-md-5 control-label" })</td>
                            <td>
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.UserName)
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })</td>
                            <td>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" style="padding-left:40%">

                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)

                            </td>
                        </tr>

                        <tr class="success">
                            <td colspan="2">
                                <input id="btnLogin" class="btn btn-success"
                                       type="submit" value="login" />
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <table class="table table-bordered">
                <thead>
                    <tr class="success">
                        <th>
                            Social Logins
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <section id="socialLoginForm">
                                @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ReturnUrl = ViewBag.ReturnUrl, @class = "btn btn-success" })
                            </section>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
